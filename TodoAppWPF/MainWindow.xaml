<Window x:Class="TodoAppWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TodoAppWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="360" Width="552">

    <Grid>
        
       
        <TextBox Name="TaskTextBox" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="400" Height="30"/>
        <Button Name="AddButton" Content="Lägg till uppgift" HorizontalAlignment="Left" VerticalAlignment="Top" Width="90" Height="30" Margin="420,10,0,0" Click="AddButton_Click" Grid.Column="4" Background="#FF1733A5" BorderBrush="#FF1733A5" Foreground="#FFFEFEFF"/>
        <ListBox Name="TasksListBox" HorizontalAlignment="Left" Height="200" Margin="10,50,0,0" VerticalAlignment="Top" Width="500"/>
        <Button Name="RemoveButton" Content="Ta bort uppgift" HorizontalAlignment="Left" VerticalAlignment="Top" Width="90" Height="30" Margin="10,260,0,0" Click="RemoveButton_Click" Grid.Column="4" Background="#FF1733A5" BorderBrush="#FF1733A5" Foreground="#FFFEFEFF"/>        <Button Name="EditButton" Content="Redigera" HorizontalAlignment="Left" VerticalAlignment="Top" Width="90" Height="30" Margin="180,260,0,0" Click="EditButton_Click" Grid.Column="4" Background="#FF1733A5" BorderBrush="#FF1733A5" Foreground="#FFFEFEFF"/>    </Grid>
</Window>
